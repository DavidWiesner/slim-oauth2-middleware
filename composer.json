{
    "name": "chadicus/slim-oauth2-middleware",
    "description": "OAuth2 middleware for use within a Slim Framework API",
    "keywords": ["slim", "oauth2", "middleware"],
    "authors": [
        {
            "name": "Chad Gray",
            "email": "chadwickgray@gmail.com",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "~5.5 || ~7.0",
        "bshaffer/oauth2-server-php": "~1.7",
        "slim/slim": "~2.0",
        "chadicus/slim-oauth2-http": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "chadicus/coding-standard": "~1.0",
        "satooshi/php-coveralls": "~0.6.1"
    },
    "autoload": {
        "psr-4": {"Chadicus\\Slim\\OAuth2\\Middleware\\" : "src"}
    },
    "autoload-dev": {
        "psr-4": {"ChadicusTest\\Slim\\OAuth2\\Middleware\\" : "tests"}
    },
    "suggest": {
        "chadicus/slim-oauth2-routes": "Offers standard OAuth2 routes for slim applications"
    }
}
